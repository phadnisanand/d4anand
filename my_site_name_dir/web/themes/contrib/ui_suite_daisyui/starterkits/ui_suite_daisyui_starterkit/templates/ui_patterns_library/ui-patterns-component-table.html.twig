{#
/**
 * @file
 * UI Pattern meta information.
 */
#}
{% set id = random() %}
{% if component.slots or component.props %}
<details class="border rounded-lg mb-8">
  <summary class="cursor-pointer p-4 rounded-lg text-lg text-gray-500">
      <span class="capitalize text-bold">{{ 'slots'|t }} & {{ 'props'|t }} </span>
  </summary>
  <div class="p-4">
    <table class="ui_patterns_component_table views-table pattern-preview__fields table w-full mb-6 text-left font-mono [&_td]:p-2 [&_th]:p-2 " style="width: 100%;">
      <thead class="bg-neutral-200">
        <tr class="border-b border-neutral-500">
          <th>{{ "Name"|t }}</th>
          <th>{{ "Label"|t }}</th>
          <th>{{ "Type"|t }}</th>
          <th>{{ "Description"|t }}</th>
        </tr>
      </thead>
      <tbody>
        {% for slot_id, slot in component.slots %}
          <tr class="ui_patterns_component_table__slot odd:bg-neutral-50 even:bg-neutral-100">
            <td>
              <code>{{ slot_id }}</code>
            </td>
            <td>{{ slot.title }}</td>
            <td>Slot</td>
            <td>{{ slot.description }}</td>
          </tr>
        {% endfor %}
        {% for prop_id, prop in component.props.properties %}
          {% if prop_id != 'attributes' %}
            <tr class="ui_patterns_component_table__prop odd:bg-neutral-50 even:bg-neutral-100">
              <td>
                <code>{{ prop_id }}</code>
              </td>
              <td>{{ prop.title }}</td>
              <td>{{ prop.ui_patterns.type_definition.label }}</td>
              <td>
                {%- for line in prop.ui_patterns.summary -%}
                  {{- line -}}
                  <br>
                {%- endfor -%}
              </td>
            </tr>
          {% endif %}
        {% endfor %}
      </tbody>
    </table>
  </div>
</details>
{% endif %}
