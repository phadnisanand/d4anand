{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup themeable
 */
#}
{% if breadcrumb %}
  {% set breadcrumb_content %}
      {{ include('ui_suite_daisyui:breadcrumbs', {
        items: breadcrumb,
      }, with_context: false) }}
  {% endset %}

  {{ include('ui_suite_daisyui_starterkit:section', {
    content: breadcrumb_content,
    attributes: create_attribute().addClass('pt-xs pb-0'),
    content_attributes: create_attribute().addClass('mb-0')
  }, with_context: false)
  }}
{% endif %}
